@using InterfaceWEBHealthcare.Models.Doctors;
@model List<DoctorData>;
@{
    ViewData["Title"] = "Privacy Policy";
}

<script src="https://kit.fontawesome.com/7b9211943c.js" crossorigin="anonymous"></script>

@foreach (var item in Model)
{
    <div class="card text-white bg-info mb-sm-2" style="max-width:inherit">
        <div class="card-body">
            <div style="line-height:0.1">
                <table class="table table-borderless">
                    <tbody>
                        <tr>
                            <td rowspan="6"> <img src="http://127.0.0.1:8887/profile.png" class="card-img-top" alt="..." width="100" height="215 "></td>
                        </tr>
                        <tr>
                            <td class="bg-info">
                                <label class="text-white" for="exampleFormControlInput1"><i class="fas fa-clinic-medical"></i> Hospital Name :@item.Surname+" "+@item.Name </label>
                            </td>
                        </tr>
                        <tr>
                            <td class="bg-info">
                                <label class="text-white" for="exampleFormControlInput1"><i class="far fa-address-card"></i> Hospital Adress : @item.Department</label>
                            </td>
                        </tr>
                        <tr>
                            <td class="bg-info">
                                <label class="text-white" for="exampleFormControlInput1"><i class="fas fa-phone-square-alt"></i> Hospital Telephone Number : @item.OfficeNumber</label>
                            </td>
                        </tr>
                        <tr>
                            <td class="bg-info">
                                <label class="text-white" for="exampleFormControlInput1"><i class="far fa-thumbs-up"></i> Positive Feedback Rate : @item.Email</label>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <span class="col-md-5">
                                    <button type="button" class="btn btn-sm btn-primary w-25 h-5">Select Hospital</button>
                                </span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}



